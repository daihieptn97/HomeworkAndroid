<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEditNote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgDeepPurple"
    android:orientation="vertical"
    android:paddingHorizontal="7dp"
    tools:context=".Main.CreateNote">

    <LinearLayout
        android:id="@+id/toolbarCreateNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgDeepPurple">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/menuEditNoteImgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/back_grey" />
        </LinearLayout>


        <ImageView
            android:id="@+id/menuEditNoteImgSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/save_grey" />

    </LinearLayout>

    <EditText
        android:id="@+id/editNoteEdtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/hint_titleNode"

        android:textColor="@color/colorText"

        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editNoteEdtContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit_text"
            android:gravity="top"
            android:hint="@string/hind_contentNote"
            android:inputType="textMultiLine"

            android:textColor="@color/colorText" />

    </ScrollView>

</LinearLayout>